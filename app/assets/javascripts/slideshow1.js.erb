	slideimages1[1] = new Image();
	slideimages1[1].src = "<%= asset_path("Class2.jpg")%>";
	slideimages1[2] = new Image();
	slideimages1[2].src = "<%= asset_path("Class3.jpg")%>";
var step=0;
function slideit1()
{
	if (!document.images)
	return;
	document.getElementById('slide1').src = slideimages1[step].src;
	if (step<2)
	step++;
	else
	step=0;
	setTimeout("slideit1()",2500);
}