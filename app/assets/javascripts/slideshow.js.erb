var slideimages = new Array();
	slideimages[0] = new Image();
	slideimages[0].src = "<%= asset_path("Placeholder1.jpg")%>";
	slideimages[1] = new Image();
	slideimages[1].src = "<%= asset_path("Placeholder2.png")%>";
	slideimages[2] = new Image();
	slideimages[2].src = "<%= asset_path("Placeholder3.png")%>";
var step=0;
function slideit()
{
	if (!document.images)
	return;
	document.getElementById('slide').src = slideimages[step].src;
	if (step<2)
	step++;
	else
	step=0;
	setTimeout("slideit()",2500);
}